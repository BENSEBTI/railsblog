	<body>

		<!-- Page Wrapper -->
			<div id="page-wrapper">

				<!-- Header -->
				
				<!-- Main -->
					<article id="main">
						<header>
							<h2>Nouveau Article</h2>
							<p>Ici vous pouvez cree votre article </p>
						</header>
						<section class="wrapper style5">
							<div class="inner">

								<h3><%= form_for :article, url: articles_path do |article| %></h3>
								 <%= article.label :title %>
								 <%= article.text_field :title %>
								 <%= article.label :author %>
								 <%= article.text_field :author %>
								 <%= article.label :imgurl %>
								 <%= article.text_field :imgurl %>
								 <%= article.label :text %>
								 <%= article.cktext_area :text %>
								 <%= article.submit 'valider' %>
								 <% end %>


								

								<hr />

							</div>
						</section>
					</article>

				<!-- Footer -->
					<footer id="footer">
						<ul class="icons">
							<li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
							<li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
							<li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
							<li><a href="#" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
							<li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
						</ul>
						<ul class="copyright">
							<li>&copy; Untitled</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
						</ul>
					</footer>

			</div>

